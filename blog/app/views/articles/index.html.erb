<h1>Listing all articles <h1>
<table>


	<tr>
		<th>Title</th>
		<th>Text</th>
		<td colspan="3"></th>
	</tr>


	<% @articles.each do |article| %>
		<tr>
			<th><%= article.title%></th>
			<th><%= article.text%></th>
			<th><%= link_to 'Show', article_path(article)%></th>
			<th><%= link_to 'Edit', edit_article_path(article)%></th>
			<th><%= link_to 'Destroy', article_path(article), method: :delete, data: {confirm: 'Seguro?'}%></th>
		</tr>
	<%end %>	
</table>

<% if user_signed_in? %>
	<%= link_to 'New Article', new_article_path%>
<% else %>
	<br>Inicie sesi√≥n para crear articulos</br>
<% end %>

